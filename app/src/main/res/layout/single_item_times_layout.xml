<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FAFAFA"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="10">
        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_back_img"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="8"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/txt_article_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supports of the democratic \nCandidate jon Ossef after his ..."
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:maxLines="2"
                />

            <TextView
                android:id="@+id/txt_content_writer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By David LEONHARDT and STFDM."
                android:textSize="16sp"
                android:textColor="#777777"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/txt_magazin_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="THOMPSON"
                    android:textSize="15sp"
                    android:textColor="#777777"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentStart="true"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_calendar_today_24"
                        android:layout_marginRight="5dp"
                        />
                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017-16-3"
                        android:textSize="16sp"
                        android:textColor="#777777"
                        android:layout_gravity="center_horizontal"
                        />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_baseline_arrow_forward_ios_24"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>